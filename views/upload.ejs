<!DOCTYPE html>
<html>
    <head>
        <title>Upload an Image</title>
        <link rel="stylesheet" href="/public/css/bootstrap-grid.min.css">
        <link rel="stylesheet" href="/public/css/bootstrap.min.css">
        <link rel="stylesheet" href="/public/css/style.css">
        <link rel="icon" href="/public/images/favicon.ico">
        <style>
            .container {
                width: 50rem;
                margin-top: 5rem;
            }
            .form-control {
                width: 95%;
                margin-right: auto;
                margin-left: auto;
            }
        </style>
    </head>
    <body>
        <%- include("../components/header.ejs"); %>

        <div class="container text-center">
            <% if (error) { %>
                <div class="alert-danger text-center border-danger border error-div">
                    <p class="error-p"><%= error %></p>
                </div>
                <br />
            <% } %>
            <br />
            <form action="/upload" method="post" enctype="multipart/form-data">
                <div class="card">
                    <h3 class="text-decoration-underline">Upload your Image</h3>
                    <div class="card-body">
                        <input type="file" name="image" accept="image/png,image/jpg,image/jpeg" id="image" class="form-control" placeholder="Upload your image" required>
                        <br />
                        <input type="text" maxlength="50" placeholder="Image Description (50 max characters)" class="form-control" name="description" required>
                        <br />
                        <button type="submit" class="btn btn-primary">Upload</button>
                    </div>
                </div>
            </form>
        </div>
    </body>
</html>